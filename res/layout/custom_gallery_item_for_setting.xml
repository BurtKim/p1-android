<?xml version="1.0" encoding="utf-8"?>
<com.p1.mobile.p1android.ui.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gallery_grid_item" >
    
    <com.p1.mobile.p1android.ui.view.SquareImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:id="@+id/gallery_thumb_icon"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true">
    </com.p1.mobile.p1android.ui.view.SquareImageView>

</com.p1.mobile.p1android.ui.view.SquareRelativeLayout>