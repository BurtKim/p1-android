<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <RelativeLayout
        android:id="@+id/imageViewBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </RelativeLayout>

    <com.p1.mobile.p1android.ui.widget.ToggleableHorizontalScrollView
        android:id="@+id/filterScrollLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:id="@+id/pictureEditCloseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparant"
        android:contentDescription="@string/todo"
        android:padding="8dp"
        android:src="@drawable/btn_contextual_close" />

    <ImageButton
        android:id="@+id/pictureEditDoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/pictureEditCloseButton"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_ok_button"
        android:contentDescription="@string/todo"
        android:src="@drawable/btn_ok" />

</RelativeLayout>