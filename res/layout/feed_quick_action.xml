<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feed_action"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/images_feed_background"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="12dp" >

    <LinearLayout
        android:id="@+id/likers_image_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="100"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

    <com.p1.mobile.p1android.ui.widget.P1CheckBox
        android:id="@+id/feed_heart_icon"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/like_bg"
        android:button="@drawable/like_heart_xml"
        android:gravity="center"
        android:paddingLeft="27dp"
        android:paddingRight="12dp"
        android:text="fd"
        android:textColor="@color/like_grey2red"
        p1:typeface="helvetica_neue_bold" />

</LinearLayout>